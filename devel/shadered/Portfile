# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                SHADERed
version             v1.3.3
categories          devel games
platforms           darwin
license             MIT
maintainers         nomaintainer
description         A tool for creating and testing HLSL and GLSL shaders
long_description    SHADERed is a lightweight tool for creating and testing \
                    HLSL and GLSL shaders. It is easy to use, open source, \
                    ross-platform (runs on Windows & Linux - HLSL shaders work \
                    on both OSes) and -frequently updated with new features.
homepage            https://shadered.org/

fetch.type          git
git.url             https://github.com/dfranx/SHADERed.git
git.branch          ${version}
post-fetch {
  system -W ${worksrcpath} "git submodule update --init --recursive"
}

depends_lib         port:libsdl2 \
                    port:sfml \
                    port:glew \
                    port:glm

configure.cmd       mkdir build && cd build && cmake
configure.pre_args  -DCMAKE_BUILD_TYPE=Release ..
